<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="#">
    <link rel="icon" type="image/x-icon" href="/images/logo.png">
    
    <title>Where is My Rickshaw</title>

    <link rel="stylesheet" href="/css/index.css">
    <link rel="stylesheet" href="/css/indexnav.css">

</head>

<body>
    <div class="cursor" onscroll="cursorMove()"></div>
    <div class="hero">
        <button class="mobile-nav-toggle" aria-controls="primary-navigation" aria-expanded="false">
            <span class="sr-only"></span>
        </button>
        <nav>
            <ul id="primary-navigation" data-visible="false" class="primary-navigation flex">
                <li class="active">
                    <a href="#">
                        <span aria-hidden="true"> </span><a href="./index">Home</a>
                    </a>
                </li>
                <li class="active">
                    <a href="#">
                        <span aria-hidden="true"> </span><a href="./safety">Safety</a>
                    </a>
                </li>
                <li class="active">
                    <a href="#">
                        <span aria-hidden="true"> </span><a href="#">Queries</a>
                    </a>
                </li>
                <li class="active">
                    <a href="#">
                        <span aria-hidden="true"> </span><a href="./contact">Contact</a>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
    <div class="logo"><img src="/images/logo.png" alt="" /></div>

    <div class="title heading">
        <div>
          <p class="slide-up"><span class="green">Ready, set, go</span>,</p>
        </div>
        <div>
          <p class="slide-up">in just a few quick taps.</p>
        </div>
      </div>
    <div class="credentials-flex">
        <div class="hover-btn login-btn"><a href="./loginchoice" target="_self">Log In</a></div>
        <div class="or">or</div>
        <div class="hover-btn register-btn"><a href="./choice" target="_self">Register</a></div>
    </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.7.1/gsap.min.js"></script>
    <script>
        // Use GSAP to animate all the texts with the "animate" class
        gsap.from(".animate", {
            duration: 0.5,
            y: 9000,
            opacity: 0,
            stagger: 0.2,
            ease: "power2.out",
        });

        const primaryNav = document.querySelector(".primary-navigation");
        const navToggle = document.querySelector(".mobile-nav-toggle");

        navToggle.addEventListener("click", () => {
            const visibility = primaryNav.getAttribute("data-visible");

            if (visibility === "false") {
                primaryNav.setAttribute("data-visible", true);
                navToggle.setAttribute("aria-expanded", true);
            } else if (visibility === "true") {
                primaryNav.setAttribute("data-visible", false);
                navToggle.setAttribute("aria-expanded", false);
            }
        });
    </script>
</body>

</html>